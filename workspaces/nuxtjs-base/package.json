{
  "name": "@opendreamnet/nuxtjs-base",
  "version": "1.4.0",
  "license": "MIT",
  "main": "nuxt.config.js",
  "scripts": {
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint": "yarn lint:js",
    "release": "yarn dlx standard-version"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "path": ".",
    "tag-prefix": "nuxtjs-base-v",
    "releaseCommitMessageFormat": "chore(release): nuxtjs-base@{{currentTag}}",
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "improvement",
        "section": "Improvements"
      },
      {
        "type": "docs",
        "section": "Miscellaneous changes"
      },
      {
        "type": "style",
        "section": "Design"
      },
      {
        "type": "refactor",
        "section": "Miscellaneous changes"
      },
      {
        "type": "perf",
        "section": "Improvements"
      },
      {
        "type": "test",
        "hidden": true
      },
      {
        "type": "chore",
        "section": "Miscellaneous changes"
      }
    ]
  },
  "author": {
    "name": "Ivan Bravo Bravo",
    "email": "kolessios@gmail.com",
    "url": "https://github.com/dreamnettech/monorepo/graphs/contributors"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamnettech/monorepo.git",
    "directory": "workspaces/app"
  },
  "bugs": {
    "email": "ivan@dreamnet.tech",
    "url": "https://github.com/dreamnettech/monorepo/issues"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "tinycolor2": "^1.4.2",
    "tippy.js": "^6.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@dreamnet/eslint-config-dreamnet-nuxtjs": "workspace:workspaces/eslint-config-dreamnet-nuxtjs",
    "@nuxt/types": "^2.15.3",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@types/lodash": "4.14.170",
    "@types/tinycolor2": "^1",
    "eslint": "^7.29.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.12.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4"
  },
  "peerDependencies": {
    "@nuxtjs/markdownit": "*",
    "@nuxtjs/tailwindcss": "*",
    "lodash": "*",
    "tippy.js": "*"
  }
}
