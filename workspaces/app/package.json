{
  "name": "@dreamnettech/app",
  "version": "0.1.2",
  "description": "Utilities for DreamNet applications.",
  "license": "MIT",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "umd:main": "dist/dreamapp.umd.js",
  "amdName": "dreamapp",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx,.js,.jsx,.vue src/",
    "test": "ts-mocha test/**/*.ts --recursive --exit",
    "clean": "shx rm -rf dist/",
    "build:web": "microbundle --format umd --external none --no-sourcemap --compress --tsconfig tsconfig.web.json --output dist/dreamapp.umd.js",
    "build:node": "tsc -b",
    "build": "yarn run clean && yarn run build:web && yarn run build:node && bundlesize",
    "prepack": "yarn run build"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "parent-package-json": "^2.0.1",
    "platform-folders": "^0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@dreamnettech/eslint-config-dreamnet": "workspace:^0.1.0",
    "@types/babel__core": "7.1.7",
    "@types/babel__preset-env": "7.9.0",
    "@types/chromedriver": "81.0.0",
    "@types/eslint": "6.8.1",
    "@types/lodash": "4.14.151",
    "@types/selenium-webdriver": "4.0.9",
    "babel-plugin-lodash": "^3.3.4",
    "bundlesize": "^0.18.0",
    "chromedriver": "^85.0.1",
    "eslint": "^7.0.0",
    "microbundle": "^0.12.0",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "shx": "^0.3.2",
    "ts-mocha": "^7.0.0",
    "typescript": "^3.9.2"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./dist/dreamapp.umd.js",
      "maxSize": "5 kB"
    }
  ],
  "files": [
    "dist/",
    "src/"
  ],
  "author": {
    "name": "IvÃ¡n Bravo Bravo",
    "email": "ivan@dreamnet.tech",
    "url": "https://github.com/dreamnettech/monorepo/graphs/contributors"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamnettech/monorepo.git",
    "directory": "workspaces/app"
  },
  "bugs": {
    "email": "ivan@dreamnet.tech",
    "url": "https://github.com/dreamnettech/monorepo/issues"
  },
  "engines": {
    "node": ">= 10"
  }
